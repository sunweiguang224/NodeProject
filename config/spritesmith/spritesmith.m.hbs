{{#sprites}}
// {{name}} 图片:
@mixin i-{{name}} {
  content: '';
  display: inline-block;
  width: ({{width}}rem/100);
  height: ({{height}}rem/100);
  background: url({{escaped_image}}) {{offset_x}}rem/100 {{offset_y}}rem/100 no-repeat;
  background-size: {{total_width}}rem/100 {{total_height}}rem/100;
}

{{/sprites}}
